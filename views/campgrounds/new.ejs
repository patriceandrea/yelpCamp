<% layout('layouts/boilerplate')%>

  <div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
      <form class="validation-form" action="/campgrounds" method="POST" novalidate enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" id="title" name="campground[title]" required>
          <div class="valid-feedback">
            Approved!
          </div>
          <div class="invalid-feedback">
            Please choose a title.
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" id="location" name="campground[location]" required>
          <div class="valid-feedback">
            Approved!
          </div>
          <div class="invalid-feedback">
            Please provide a valid location.
          </div>
        </div>
        <input type="file" name="image" id="" multiple>
        <!-- <div class="mb-3">
          <label class="form-label" for="image">Image Url</label>
          <input class="form-control" type="text" id="image" name="campground[image]" required>
          <div class="valid-feedback">
            Approved!
          </div>
          <div class="invalid-feedback">
            Please provide a valid URL image.
          </div> 
        </div>-->
        <div class="mb-3">
          <label class="form-label" for="price">Campground Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
              aria-describedby="price-labels" name="campground[price]" required>
            <div class="valid-feedback">
              Approved!
            </div>
            <div class="invalid-feedback">
              Please provide add a price.
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" type="text" id="location" name="campground[description]" rows="3"
            required></textarea>
          <div class="valid-feedback">
            Approved!
          </div>
          <div class="invalid-feedback">
            Please add a description.
          </div>
        </div>
        <div class="mb-3">
          <button class="btn btn-success" type="submit">Add Campground</button>
        </div>
      </form>
      <a href="/campgrounds">Back to Campgrounds</a>
    </div>
  </div>